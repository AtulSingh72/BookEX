	<div class="card-deck" style="margin: 75px 10px;">
	<% var count = 0; console.log(records); records.forEach(function(row){ if(row.uploader == currentUser.username) {  count++;%>
	<div class="col-lg-3 col-md-6" style="margin-bottom: 15px;">
  <div class="card books">
	  <div class="card-img-top img-fluid books-img" style="width:100%;height: 350px;overflow: hidden;display:flex;padding: 7px;">
		  <% if(row.price != "") { %>
		<img class="card-img-top img-fluid" src="<%= row.image.replace((row.image).split('/')[(row.image).split('/').length - 2], 'w_300,f_auto') %>" alt="Card image cap" style="object-fit: contain;">
		  <% } else { %>
		  <img class="card-img-top img-fluid" src="https://upload.wikimedia.org/wikipedia/commons/8/87/PDF_file_icon.svg" alt="Card image cap" style="object-fit: contain;">
		  <% } %>
	  </div>
	<div class="card-body books-body"	style="">
		<% if(row.title.length > 25) { %>
	  		<h4 class="card-title" style="text-align: center;"><%= row.title%></h4>
		<% } else { %>
			<h4 class="card-title" style="text-align: center;"><%= row.title%></h4>
		<% } %>

		<% if(row.author != null) { %>
		<p style="text-align:center"><bold>Author: <%= row.author %></bold></p>
		<% } %>

		<% if(row.price != "") { %>
		<p style="font-size: 18px;font-weight: bold;text-align: center;"><i class="fa fa-inr"></i> <%= row.price %></p>
		<% } %>

		<% if(row.description.length > 92) { %>
			<p class="card-text"><%= row.description.substring(0, 70)%> ....</p>
		<% } else { %>
			<p class="card-text"><%= row.description%></p>
		<% } %>
		<form action="/<% if(row.author == null) { %>misc<% } else if(row.price === "") {%>ebooks<%} else { %>books<%}%>/<%= row._id %>" method="GET" style="text-align:center;">
			<button type="submit" class="btn btn-sm btn-light stretched-link" style="background-color: rgba(277, 277, 277, 0.9)"><i class="fa fa-info"></i> View More</button>
		</form>
	</div>
		</div>
  </div>
	<% }}); if(count == 0) {%>
